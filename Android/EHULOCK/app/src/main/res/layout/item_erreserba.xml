<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="horizontal">

    <TextView

        android:id="@+id/tvErabiltzileId"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="@string/erabiltzailea"
        android:visibility="gone" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:stretchColumns="1,2"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="5dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center">

            <TextView

                android:id="@+id/tvErreserbaId"

                android:layout_width="30dp"
                android:background="@drawable/back"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/erreserbaid" />

            <TextView

                android:id="@+id/tvHasiera"
                android:background="@drawable/back"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"

                android:text="@string/hasiera" />

            <TextView

                android:id="@+id/tvAmaiera"
                android:background="@drawable/back"
                android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_height="wrap_content"

                android:text="@string/amaiera" />
        </TableRow>

    </TableLayout>


</LinearLayout>


